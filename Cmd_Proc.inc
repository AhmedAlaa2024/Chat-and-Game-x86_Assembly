GET_FLAGS PROC NEAR
    MOV BX, P_DATA
    PUSH [BX][34]
    POPF
    RET
GET_FLAGS ENDP

SET_FLAGS PROC NEAR
    PUSHF
    MOV BX, P_DATA
    POP [BX][34] 
    RET
SET_FLAGS ENDP

EXEC_ADD_CMD PROC NEAR
    CMP Cl, 0 
    JNE @@SIZE8  
    MOV DX, WORD PTR [SI]
    CALL GET_FLAGS
    ADD WORD PTR [DI], DX
    JMP @@FINALLY

    @@SIZE8:
    MOV DL, BYTE PTR [SI]
    CALL GET_FLAGS
    ADD BYTE PTR [DI], DL
    
    @@FINALLY:
    CALL SET_FLAGS
    RET
EXEC_ADD_CMD ENDP

